@model NailShop.Business.Model.ModelWeb.ForgetPassword
@{
    ViewBag.Title = "ForgetPassword";
    Layout = "~/Views/Share/_Layout.cshtml";
}

@using (Html.BeginForm("ForgetPassword", "Home", FormMethod.Post))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)
    <div class="page-wrap">
        <section class="section-forget">
            <div class="container">
                <div class="row">
                    <div class="col-sm-4 col-sm-push-4 forgetpass-form">
                        <h4>@Resources.ChangePassword.titleForgetPassword</h4>
                        <div class="form-group">
                            <div class="input-group">
                                @Html.TextBoxFor(m => m.Email, new { @class = "form-control", @placeholder = @Resources.ChangePassword.placeholderEmail, @maxlength = "100" })
                                <span class="input-group-addon" id="basic-addon2"><i class="fa fa-user"></i></span>
                            </div>
                        </div>
                        <div class="form-group">
                            <button type="submit" class="btn btn-primary col-sm-12">@Resources.ChangePassword.btnSendEmail</button>

                        </div>
                        <div class="form-group">
                            <label>@Resources.ChangePassword.msgNote</label>
                        </div>
                    </div>
                </div>
            </div>
        </section>
    </div>
}

