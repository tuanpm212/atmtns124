@using NailShop.DataAccess;
@model vw_Slide
@{
    ViewBag.Title = "CreateSlide";
    Layout = "~/Views/Share/_Backend.cshtml";
}


<section class="scrollable padder" ng-app="MyApp" ng-controller="CtrlController">
    <div class="m-b-md">
        <h3 class="m-b-none">Create/View Slider</h3>
    </div>
    @using (Html.BeginForm("CreateSlide", "admin", FormMethod.Post, new { id = "formSlide", @class = "form-horizontal", @name = "formSlide" }))
    {
        <div class="form-group" ng-class="{ 'has-error': formSlide.Name.$invalid && formSlide.Name.$dirty }">
            <label class="col-sm-2 control-label">Name</label>
            <div class="col-sm-10">
                @Html.TextBoxFor(m => m.Name, new { id = "Name", @class = "form-control", ng_model = "slide.name", @required = "true" })
            </div>
        </div>
        <div class="form-group">
            <label class="col-sm-2 control-label">Description</label>
            <div class="col-sm-10">
                @Html.TextAreaFor(m => m.Description, new { id = "Description", @class = "form-control" })
            </div>
        </div>
        <div class="form-group">
            <label class="col-sm-2 control-label">Image Cover</label>
            <div class="col-sm-10">
                <div id="boxCover" class="dropfile visible-lg">
                    <img id="imgUpload" src="@ViewBag.Image" style="width: 1200px; height: 300px" />
                    <a id="imgCover" href="#"></a>
                </div>
            </div>
        </div>
        <div class="form-group">
            <div class="col-sm-10 col-sm-offset-2">
                <button id="btnSave" type="submit" class="btn btn-primary" ng-disabled="!formSlide.$valid">Save</button>
                <a class="btn btn-primary" href="/admin/slide">Back</a>
            </div>
        </div>
    }
</section>
@section Styles {
    <link href="~/Contents/css/uploadfile.css" rel="stylesheet" />
}

@section Scripts {
    <script src="~/Scripts/AngularJs/1.3.8.angular.min.js"></script>
    <script src="~/Scripts/jquery.uploadfile.js"></script>
    <script src="~/Scripts/jquery.form.js"></script>
    <script>
        var slideID = '@ViewBag.ID';
        $("#imgCover").uploadFile({
            url: '/admin/UploadCover',
            multiple: false,
            dragDrop: false,
            allowedTypes: 'jpg,png,bmp,gif',
            maxFileSize: 2100000,
            onSuccess: function (files, response, xhr) {
                var data = $.parseJSON(response);
                $('#boxCover').find('img').attr('src', data.file);
            },
        });

        $("#imgPhoto").uploadFile({
            url: '/admin/UploadPhoto',
            multiple: false,
            dragDrop: false,
            allowedTypes: 'jpg,png,bmp,gif',
            maxFileSize: 2100000,
            onSuccess: function (files, response, xhr) {
                var data = $.parseJSON(response);
                $('#boxPhoto').find('img').attr({ 'src': data.file, 'data-id': data.id });
            },
        });

        $("#btnSave").click(function () {
            var slide = {

                SlideID: '@ViewBag.ID',
                SiteID: 1,
                Type: 'SLIDE_TOP',
                Url: null,
                Sort: 1,
                IsActive: 1
            },
                slidelang = {
                    SlideID: '@ViewBag.ID',
                    LangID: 'en-US',
                    Name: $('#Name').val(),
                    Description: $('#Description').val(),
                    Image: $('#imgUpload').attr('src')
                };
            $.ajax({
                url: '/admin/SaveSlide',
                type: 'Post',
                data: JSON.stringify({ slide: slide, slidelang: slidelang }),
                contentType: 'application/json; charset=utf-8',
                success: function (data) {
                    if (data.IsOk)
                        window.location.href = "/admin/slide";
                }
            });
        });

        angular.module('MyApp', []).controller('CtrlController', ['$scope', function ($scope) { }]);
    </script>
}
