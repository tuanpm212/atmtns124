@using NailShop.DataAccess;
@model vw_ProductHot
@{
    ViewBag.Title = "CreateProductHot";
    Layout = "~/Views/Share/_Backend.cshtml";
}


<section class="scrollable padder" ng-app="MyApp" ng-controller="CtrlController">
    <div class="m-b-md">
        <h3 class="m-b-none">Create/View Product</h3>
    </div>
    @using (Html.BeginForm("CreateProductHot", "admin", FormMethod.Post, new { id = "formCreateProduct", @class = "form-horizontal", @name = "formProduct" }))
    {
        <div class="form-group" ng-class="{ 'has-error': formProduct.ProductCode.$invalid && formProduct.ProductCode.$dirty }">
            <label class="col-sm-2 control-label">Code</label>
            <div class="col-sm-3">
                @Html.TextBoxFor(m => m.ProductCode, new { id = "Code", @class = "form-control", ng_model = "product.code", @required = "true" })
            </div>
        </div>
        <div class="form-group" ng-class="{ 'has-error': formProduct.ProductName.$invalid && formProduct.ProductName.$dirty }">
            <label class="col-sm-2 control-label">Name</label>
            <div class="col-sm-10">
                @Html.TextBoxFor(m => m.ProductName, new { id = "ProductName", @class = "form-control", ng_model = "product.productName", @required = "true" })
            </div>
        </div>
        <div class="form-group">
            <label class="col-sm-2 control-label">Short Description</label>
            <div class="col-sm-10">
                @Html.TextAreaFor(m => m.ShortDescription, new { id = "ShortDescription", @class = "form-control" })
            </div>
        </div>
        <div class="form-group">
            <label class="col-sm-2 control-label">Long Description</label>
            <div class="col-sm-10">
                @Html.TextAreaFor(m => m.Description, new { id = "Description", @class = "form-control" })
            </div>
        </div>
        <div class="form-group" ng-class="{ 'has-error': formProduct.Price.$invalid && formProduct.Price.$dirty }">
            <label class="col-sm-2 control-label">Price</label>
            <div class="col-sm-10">
                @Html.TextBoxFor(m => m.Price, new { id = "Price", @type = "number", @class = "form-control", ng_model = "product.price", @required = "true" })
            </div>
        </div>
        <div class="form-group">
            <div class="col-lg-offset-2 col-sm-2">
                <div class="checkbox">
                    <label>
                        @Html.CheckBoxFor(m => m.IsActive, new { id = "IsActive" })Active
                    </label>
                </div>
            </div>
        </div>
        <div class="form-group">
            <label class="col-sm-2 control-label">Image</label>
            <div class="col-sm-2">
                <div id="boxCover" class="dropfile visible-lg">
                    <img id="imgUpload" src="@ViewBag.Image" style="width: 200px; height: 150px" />
                    <a id="imgCover" href="#"></a>
                </div>
            </div>
        </div>
        <div class="form-group">
            <div class="col-sm-10 col-sm-offset-2">
                <button id="btnSave" type="button" class="btn btn-primary" ng-disabled="!formProduct.$valid">Save</button>
                <a class="btn btn-primary" href="/admin/ProductHot">Back</a>
            </div>
        </div>
    }
</section>
@section Styles {
    <link href="~/Contents/css/uploadfile.css" rel="stylesheet" />
}

@section Scripts {
    <script src="~/Scripts/AngularJs/1.3.8.angular.min.js"></script>
    <script src="~/Scripts/jquery.uploadfile.js"></script>
    <script src="~/Scripts/jquery.form.js"></script>
    <script>
        var slideID = '@ViewBag.ID';
        $("#imgCover").uploadFile({
            url: '/admin/UploadCover',
            multiple: false,
            dragDrop: false,
            allowedTypes: 'jpg,png,bmp,gif',
            maxFileSize: 2100000,
            onSuccess: function (files, response, xhr) {
                var data = $.parseJSON(response);
                $('#boxCover').find('img').attr('src', data.file);
            },
        });

        $("#imgPhoto").uploadFile({
            url: '/admin/UploadPhoto',
            multiple: false,
            dragDrop: false,
            allowedTypes: 'jpg,png,bmp,gif',
            maxFileSize: 2100000,
            onSuccess: function (files, response, xhr) {
                var data = $.parseJSON(response);
                $('#boxPhoto').find('img').attr({ 'src': data.file, 'data-id': data.id });
            },
        });

        $("#btnSave").click(function () {
            var product = {
                ProductID: @ViewBag.ID,
                SiteID: 1,
                StoreID: @ViewBag.StoreID,
                ProductCode: $('#Code').val(),
                ProductName: $('#Name').val(),
                ShortDescription: $('#ShortDescription').val(),
                Description: $('#Description').val(),
                Thumbnail: $('#Thumbnail').val(),
                LargeImage: "",
                Url: "",
                Price: "",
                Sort: "",
                IsActive: "",
            },
                slidelang = {
                    SlideID: '@ViewBag.ID',
                    LangID: 'en-US',
                    Name: $('#Name').val(),
                    Description: $('#Description').val(),
                    Image: $('#imgUpload').attr('src')
                };
            $.ajax({
                url: '/admin/SaveSlide',
                type: 'Post',
                data: JSON.stringify({ slide: slide, slidelang: slidelang }),
                contentType: 'application/json; charset=utf-8',
                success: function (data) {
                    if (data.IsOk)
                        window.location.href = "/admin/slide";
                }
            });
        });

        angular.module('MyApp', []).controller('CtrlController', ['$scope', function ($scope) { }]);
    </script>
}


