@using NailShop.DataAccess;
@model vw_Slide
@{
    ViewBag.Title = "Welcome";
    Layout = "~/Views/Share/_Backend.cshtml";
}

<section class="scrollable padder">
    <div class="m-b-md">
        <h3 class="m-b-none">@Resources.Backend.headAbout</h3>
    </div>
    <form id="formWelcome" class="form-horizontal">
        <div class="form-group">
            <div id="divValue" class="col-sm-12" data-id="@Model.SlideID">
                @Html.TextArea("description", @Model.Description)
            </div>
        </div>
        <div class="form-group">
            <div class="col-sm-4">
                <div>
                    <button id="btnSave" type="submit" class="btn btn-primary">@Resources.Backend.btnSave</button>
                </div>
            </div>
        </div>
    </form>
    <div class="modal fade" id="modalConfirm" role="dialog">
        <div class="modal-dialog modal-sm">
            <div class="modal-content">
                <div class="modal-header bg-primary">
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                    <h4 class="modal-title"><i class="fa fa-warning"></i>Warring</h4>
                </div>
                <div class="modal-body">
                    <p id="msgContent">You save sucessfull!</p>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-primary" data-dismiss="modal">Close</button>
                </div>
            </div>
        </div>
    </div>
</section>

@section Styles {
    <link href="~/contents/assets/css/kendo.common.css" rel=" stylesheet" />
    <link href="~/contents/assets/css/kendo.default.css" rel=" stylesheet" />
}

@section Scripts {
    <script src="~/contents/assets/js/kendo.js"></script>
    <script src="~/contents/assets/js/function.js"></script>
    <script>
        $("#description").kendoEditor({
            resizable: {
                content: false,
                toolbar: true
            }
        });

        var editor = $("#description").data("kendoEditor");

        $('#formWelcome').submit(function (event) {
            event.preventDefault();
            var slide = {
                SlideID: $('#divValue').attr('data-id'),
            }
            var slideLang = {
                SlideID: $('#divValue').attr('data-id'),
                LangID: 'en-US',
                Description: editor.value(),
            };
            $.ajax({
                url: '/admin/SaveWelcome',
                type: 'Post',
                data: JSON.stringify({ slide: slide, slideLang: slideLang }),
                contentType: 'application/json; charset=utf-8',
                success: function (data) {
                    if (data.IsOk) {
                        $('#msgContent').html('You save sucessfull!');
                        $('#modalConfirm').modal('show');
                    }
                    else {
                        $('#msgContent').html('You save unsucessfull!');
                        $('#modalConfirm').modal('show');
                    }
                }
            });
        });
    </script>
}