@using NailShop.DataAccess;
@model vw_Brand
@{
    ViewBag.Title = "CreateBrand";
    Layout = "~/Views/Share/_Backend.cshtml";
}

    <section class="scrollable padder" ng-app="MyApp" ng-controller="CtrlController">
    <div class="m-b-md">
        <h3 class="m-b-none">Create/View Brand</h3>
    </div>
    @using (Html.BeginForm("CreateBrand", "admin", FormMethod.Post, new { id = "formBrand", @class = "form-horizontal", @name = "formBrand" }))
    {
        <div class="form-group" ng-class="{ 'has-error': formBrand.Url.$invalid && formBrand.Url.$dirty }">
            <label class="col-sm-2 control-label">Name</label>
            <div class="col-sm-10">
                @Html.TextBoxFor(m => m.Name, new { id = "Name", @class = "form-control", ng_model = "brand.name", @required = "true" })
            </div>
        </div>
        <div class="form-group" ng-class="{ 'has-error': formBrand.Url.$invalid && formBrand.Url.$dirty }">
            <label class="col-sm-2 control-label">Brand Url</label>
            <div class="col-sm-10">
                @Html.TextBoxFor(m => m.Url, new { id = "Url", @class = "form-control", ng_model = "brand.url", @required = "true" })
            </div>
        </div>
        <div class="form-group">
            <label class="col-sm-2 control-label">Description</label>
            <div class="col-sm-10">
                @Html.TextAreaFor(m => m.Description, new { id = "Description", @class = "form-control" })
            </div>
        </div>
        <div class="form-group">
            <label class="col-sm-2 control-label">Image Cover</label>
            <div class="col-sm-10">
                <div id="boxCover" class="dropfile visible-lg">
                    <img id="imgUpload" src="@Model.Image" style="width: 250px; height: 180px" />
                    <a id="imgCover" href="#"></a>
                </div>
            </div>
        </div>
        <div class="form-group">
            <div class="col-sm-10 col-sm-offset-2">
                <div class="checkbox">
                    <label>
                        @Html.CheckBox("IsActive", Model.IsActive)
                        Active
                    </label>
                </div>
            </div>
        </div>
        <div class="form-group">
            <div class="col-sm-10 col-sm-offset-2">
                <button id="btnSave" type="submit" class="btn btn-primary" ng-disabled="!formBrand.$valid">Save</button>
                <a class="btn btn-primary" href="/admin/brand">Back</a>
            </div>
        </div>
    }
</section>

@section Styles {
    <link href="~/Contents/css/uploadfile.css" rel="stylesheet" />
}

@section Scripts {
    <script src="~/Scripts/AngularJs/1.3.8.angular.min.js"></script>
    <script src="~/Scripts/jquery.uploadfile.js"></script>
    <script src="~/Scripts/jquery.form.js"></script>
    <script>
        var slideID = '@ViewBag.ID';
        $("#imgCover").uploadFile({
            url: '/admin/UploadCover',
            multiple: false,
            dragDrop: false,
            allowedTypes: 'jpg,png,bmp,gif',
            maxFileSize: 2100000,
            onSuccess: function (files, response, xhr) {
                var data = $.parseJSON(response);
                $('#boxCover').find('img').attr('src', data.file);
            },
        });

        $("#imgPhoto").uploadFile({
            url: '/admin/UploadPhoto',
            multiple: false,
            dragDrop: false,
            allowedTypes: 'jpg,png,bmp,gif',
            maxFileSize: 2100000,
            onSuccess: function (files, response, xhr) {
                var data = $.parseJSON(response);
                $('#boxPhoto').find('img').attr({ 'src': data.file, 'data-id': data.id });
            },
        });

        $("#btnSave").click(function () {
            var brand = {
                BrandID: '@ViewBag.ID',
                SiteID: 1,
                Url: $('#Url').val(),
                Sort: 1,
                IsActive: $('#chkIsActvie').is(':checked')
            },
                brandlang = {
                    BrandID: '@ViewBag.ID',
                    LangID: 'en-US',
                    Name: $('#Name').val(),
                    Description: $('#Description').val(),
                    Image: $('#imgUpload').attr('src')
                };
            $.ajax({
                url: '/admin/SaveBrand',
                type: 'Post',
                data: JSON.stringify({ brand: brand, brandlang: brandlang }),
                contentType: 'application/json; charset=utf-8',
                success: function (data) {
                    if (data.IsOk)
                        window.location.href = "/admin/brand";
                }
            });
        });

        angular.module('MyApp', []).controller('CtrlController', ['$scope', function ($scope) { }]);
    </script>
}
